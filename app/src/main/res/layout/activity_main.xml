<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/eggs"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="120dp"
            android:elevation="6dp"
            android:background="#fff"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_egg"
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/egg"


                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Egg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/img_egg"
                    android:layout_toEndOf="@+id/img_egg"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/textView_eg" />

                <Button
                    android:text="Add To Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:background="@drawable/add_to_cart_btn"
                    android:id="@+id/egg_btn"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/wheat_card"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="6dp"
            android:layout_marginTop="4dp"
            android:background="#fff"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/wheat"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bread"


                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Bread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/wheat"
                    android:layout_toEndOf="@+id/wheat"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/textView_wheat" />


                <Button
                    android:text="Add To Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:background="@drawable/add_to_cart_btn"
                    android:id="@+id/button_wheat"

                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/milk"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="4dp"
            android:elevation="6dp"
            android:background="#fff"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_dp"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/milk"
                    app:civ_border_color="#fff"
                    app:civ_border_width="3dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/user_dp"
                    android:layout_toEndOf="@+id/user_dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="50dp"
                    android:id="@+id/textView" />


                <Button
                    android:text="Add To Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:background="@drawable/add_to_cart_btn"
                    android:id="@+id/button_milk"

                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/status"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="6dp"
            android:background="#fff"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        android:id="@+id/cart_items"
                        android:layout_height="match_parent"
                        android:text="Items in cart : 0"/>

                    <Button
                        android:text="Confirm"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:background="@drawable/add_to_cart_btn"
                        android:id="@+id/btn_checkout" />

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>


